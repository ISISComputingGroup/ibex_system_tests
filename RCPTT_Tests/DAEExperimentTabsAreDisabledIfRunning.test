assert_instrument_is_setup
begin_run
  
// Assert that Time Channels tab can be clicked but it's not enabled
with [get-view "DAE Control Program"] {
    get-tab-folder | get-tab-item "Experiment Setup" | click
    get-tab-folder -after [get-label "DAE Control Program"] -index 1 | get-tab-item "Time Channels" | click
}
get-view "DAE Control Program" | get-control Any -after [get-label "DAE Control Program"] -index 14 
    | get-property enablement | equals false | verify-true
    
// Assert that Data Acquisition tab can be clicked but it's not enabled
get-view "DAE Control Program" | get-tab-folder -after [get-label "DAE Control Program"] -index 1 
    | get-tab-item "Data Acquisition" | click
get-view "DAE Control Program" | get-control Any -after [get-label "DAE Control Program"] -index 14 
    | get-property enablement | equals false | verify-true
    
// Assert that Periods tab can be clicked but it's not enabled
get-view "DAE Control Program" | get-tab-folder -after [get-label "DAE Control Program"] -index 1 
    | get-tab-item Periods | click
get-view "DAE Control Program" | get-control Any -after [get-label "DAE Control Program"] -index 14 
    | get-property enablement | equals false | verify-true
    
// Stop the run
end_run

// Make sure we leave things as we found them    
assert_instrument_is_setup
