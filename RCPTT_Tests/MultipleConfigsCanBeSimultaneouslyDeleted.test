// Create three global configuration name variables
global [val config01 [test_prefix "config01"]] [val config02 [test_prefix "config02"]] [val config03 [test_prefix "config03"]]

// Create a first configuration
with [new_config_window] {
	set_config_description $config01
	save_and_name_configuration $config01 
}

// Create a second configuration
with [new_config_window] {
	set_config_description $config02
	save_and_name_configuration $config02
}

// Create a third configuration
with [new_config_window] {
	set_config_description $config03
	save_and_name_configuration $config03
}

// Wait has to be put in because the delete configuration window will appear but not always be fully updated
wait 5000

// Delete the three configurations together
delete_configuration $config01
delete_configuration $config02
delete_configuration $config03

// Wait has to be put in because the edit configuration window will appear but not always be fully updated
wait 5000

// Assert that the three previous configurations do not appear in the edit configuration window
try -times 500 -delay 200 -command {
	get-menu "Configuration/Configurations/Edit" | click
}
// Loop through the number of configs in the edit configuration list and assert that none of the names are equal to any of the previously created configs
with [get-window "Edit Configuration" | get-list] {
	let [val item_count [get-property -raw true -name "getItemCount()"]] {	
		loop [val index [int 0]] {
			if [ $index | lt $item_count] {
			   get-window "Edit Configuration" | get-list | get-property -raw true -name [ concat "getItems().String[" $index "]" ] | eq $config01 | verify-false
			   get-window "Edit Configuration" | get-list | get-property -raw true -name [ concat "getItems().String[" $index "]" ] | eq $config02 | verify-false
			   get-window "Edit Configuration" | get-list | get-property -raw true -name [ concat "getItems().String[" $index "]" ] | eq $config03 | verify-false
			   recur [ $index | plus 1 ]
			}
		}
	}
}

