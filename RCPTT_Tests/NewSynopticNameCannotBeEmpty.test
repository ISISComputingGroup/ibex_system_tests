get-menu "Synoptic/New" | click
get-window "New Synoptic" | get-button "Save as ..." | click

// Assert - error message is displayed
get-window "New Synoptic" | get-window "Save Synoptic As" | get-editbox -after [get-label "Save Synoptic"] 
    | get-property text | equals "Name cannot be blank" | verify-true
    
// Assert - OK button is disabled
get-window "New Synoptic" | get-window "Save Synoptic As" | get-button OK | get-property enablement | equals false 
    | verify-true
    
// Close dialogs
with [get-window "New Synoptic"] {
    get-window "Save Synoptic As" | get-button Cancel | click
    get-button Cancel | click
}


