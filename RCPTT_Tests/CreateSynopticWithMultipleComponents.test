Entry-Name: .content

get-menu "Synoptic/New" | click

// Procedure to add a component to a synoptic
proc add_synoptic [val component_name] {
	with [get-window "New Synoptic"] {
	    get-button "Add Component" | click
	    get-combo -after [get-label Type] | select $component_name
	    get-editbox -after [get-label Name] | set-text $component_name
	}
}

// Add eight sample components
add_synoptic "BEAMSTOP"
add_synoptic "CHOPPER"
add_synoptic "DAE"
add_synoptic "EUROTHERM"
add_synoptic "KEPCO"
add_synoptic "MOVINGMONITOR"
add_synoptic "POLARISER"
add_synoptic "TDK_LAMBDA_GENESYS"

// Save and name the synoptic 
with [get-window "New Synoptic"] {
    get-button "Save as ..." | click
    with [get-window "Save Synoptic As"] {
        with [get-editbox -after [get-label "Name:"]] {
            set-text synoptic01
        }
        get-button OK | click
    }
}

// Select the synoptic from the drop-down list
switch_to_synoptic_view
get-view "Synoptic navigator" | get-group "Synoptic Selection" | get-combo | select synoptic01

// Assert that a component's image and label exist
with [get-view "New synoptic"] {
    with [get-label ""] {
        get-property className | equals "org.eclipse.swt.widgets.Label" | verify-true
        get-property "getToolTipText()" | equals BEAMSTOP | verify-true
    }
    with [get-label "" -after [get-label BEAMSTOP]] {
        get-property className | equals "org.eclipse.swt.widgets.Label" | verify-true
        get-property "getToolTipText()" | equals CHOPPER | verify-true
    }
    with [get-label "" -after [get-label CHOPPER]] {
        get-property className | equals "org.eclipse.swt.widgets.Label" | verify-true
        get-property "getToolTipText()" | equals DAE | verify-true
    }
    with [get-label "" -after [get-label DAE]] {
        get-property className | equals "org.eclipse.swt.widgets.Label" | verify-true
        get-property "getToolTipText()" | equals EUROTHERM | verify-true
    }
    with [get-label "" -after [get-label EUROTHERM]] {
        get-property className | equals "org.eclipse.swt.widgets.Label" | verify-true
        get-property "getToolTipText()" | equals KEPCO | verify-true
    }
    with [get-label "" -after [get-label KEPCO]] {
        get-property className | equals "org.eclipse.swt.widgets.Label" | verify-true
        get-property "getToolTipText()" | equals MOVINGMONITOR | verify-true
    }
    with [get-label "" -after [get-label MOVINGMONITOR]] {
        get-property className | equals "org.eclipse.swt.widgets.Label" | verify-true
        get-property "getToolTipText()" | equals POLARISER | verify-true
    }
    with [get-label "" -after [get-label POLARISER]] {
        get-property className | equals "org.eclipse.swt.widgets.Label" | verify-true
        get-property "getToolTipText()" | equals "TDK_LAMBDA_GENESYS" | verify-true
    }
}
