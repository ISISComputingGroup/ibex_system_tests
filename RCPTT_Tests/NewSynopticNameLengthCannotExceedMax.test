Content-Type: text/ecl
Entry-Name: .content

get-menu "Synoptic/New" | click
with [get-window "New Synoptic"] {
    get-button "Save as ..." | click
    with [get-window "Save Synoptic As" | get-editbox -after [get-label "Name:"]] {
        set-text ABCDEABCDEabcdeabcdeABCDEABCDE
    }
}

// Assert that so far the name is allowed
with [get-window "New Synoptic" | get-window "Save Synoptic As"] {
    get-editbox -after [get-label "Save Synoptic"] | get-property text 
        | equals "" | verify-true
    get-button OK | get-property enablement | equals true | verify-true
}

// Insert an extra character
get-window "New Synoptic" | get-window "Save Synoptic As" | get-editbox -after [get-label "Name:"] 
    | set-text ABCDEABCDEabcdeabcdeABCDEABCDEa
    
// Assert - the name is not allowed
with [get-window "New Synoptic" | get-window "Save Synoptic As"] {
    get-editbox -after [get-label "Save Synoptic"] | get-property text 
        | equals "Name cannot be more than 30 characters long" | verify-true
    get-button OK | get-property enablement | equals false | verify-true
}

// Close open windows
with [get-window "New Synoptic"] {
    get-window "Save Synoptic As" | get-button Cancel | click
    get-button Cancel | click
}
