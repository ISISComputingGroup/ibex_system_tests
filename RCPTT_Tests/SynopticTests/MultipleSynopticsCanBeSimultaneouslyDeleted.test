// Create three global configuration variables
global [val synoptic01 [test_prefix "synoptic01"]] [val synoptic02 [test_prefix "synoptic02"]] [val synoptic03 [test_prefix "synoptic03"]]

// Create a first synoptic
with [new_synoptic] {
	save_and_name_synoptic $synoptic01
}

// Create a second synoptic
with [new_synoptic] {
	save_and_name_synoptic $synoptic02
}

// Create a third synoptic
with [new_synoptic] {
	save_and_name_synoptic $synoptic03
}

// Delete the three synoptics
try -times 500 -delay 200 -command {
	get-menu "Synoptic/Delete" | click
	with [get-window "Delete Synoptic"] {
	    get-list | select $synoptic01 $synoptic02 $synoptic03
	    get-button OK | click
	}
}

// Wait has to be put in because the edit synoptic window will appear but not always be fully updated
wait 5000

// Assert that the three previous synoptics do not appear in the edit configuration window
// Loop through the number of synoptics in the edit synoptic list and assert that none of the names are equal to any of the previously created synoptics
with [edit_synoptic | get-list] {
	let [val item_count [get-property -raw true -name "getItemCount()"]] {	
		loop [val index [int 0]] {
			if [ $index | lt $item_count] {
			   get-window "Edit Synoptic" | get-list | get-property -raw true -name [ concat "getItems().String[" $index "]" ] | eq $synoptic01 | verify-false
			   get-window "Edit Synoptic" | get-list | get-property -raw true -name [ concat "getItems().String[" $index "]" ] | eq $synoptic02 | verify-false
			   get-window "Edit Synoptic" | get-list | get-property -raw true -name [ concat "getItems().String[" $index "]" ] | eq $synoptic03 | verify-false
			   recur [ $index | plus 1 ]
			}
		}
	}
}
