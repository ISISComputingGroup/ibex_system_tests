// Create five new blocks
get-menu "Configuration/Edit Current Configuration..." | click
with [get-window "Edit Configuration"] {
    get-tab-folder | get-tab-item Blocks | click
    // Add block one
    get-button "Add Block" | click
    with [get-window "Block Configuration"] {
        with [get-group "Selected block"] {
            with [get-editbox -after [get-label "Name:"]] {
                set-text "NEW_BLOCK_01"
            }
            with [get-editbox -after [get-label "PV address:"]] {
                set-text "NEW_PV_01"
            }
        }
        get-button OK | click
    }
    // Add block two
    get-button "Add Block" | click
    with [get-window "Block Configuration"] {
        with [get-group "Selected block"] {
            with [get-editbox -after [get-label "Name:"]] {
                set-text "NEW_BLOCK_02"
            }
            with [get-editbox -after [get-label "PV address:"]] {
                set-text "NEW_PV_02"
            }
        }
        get-button OK | click
    }
    // Add block three
    get-button "Add Block" | click
    with [get-window "Block Configuration"] {
        with [get-group "Selected block"] {
            with [get-editbox -after [get-label "Name:"]] {
                set-text "NEW_BLOCK_03"
            }
            with [get-editbox -after [get-label "PV address:"]] {
                set-text "NEW_PV_03"
            }
        }
        get-button OK | click
    }
    // Add block four
    get-button "Add Block" | click
    with [get-window "Block Configuration"] {
        with [get-group "Selected block"] {
            with [get-editbox -after [get-label "Name:"]] {
                set-text "NEW_BLOCK_04"
            }
            with [get-editbox -after [get-label "PV address:"]] {
                set-text "NEW_PV_04"
            }
        }
        get-button OK | click
    }
    // Add block five
    get-button "Add Block" | click
    with [get-window "Block Configuration"] {
        with [get-group "Selected block"] {
            with [get-editbox -after [get-label "Name:"]] {
                set-text "NEW_BLOCK_05"
            }
            get-button Visible | key-type "TRAVERSE_TAB_NEXT"
            with [get-editbox -after [get-label "PV address:"]] {
                click-text
                set-text "NEW_PV_05"
            }
        }
        get-button OK | click
    }
    get-tab-folder | get-tab-item Groups | click
    // Add new group
    with [get-group Groups] {
        get-button Add | click
        get-list | select "NEW_GROUP"
    }
    // Transfer all five blocks to new group
    with [get-group "Selected group" | get-group Blocks] {
        get-list | select "NEW_BLOCK_05" "NEW_BLOCK_04" "NEW_BLOCK_03" "NEW_BLOCK_02" "NEW_BLOCK_01"
        get-button | click
    }
    get-button Save | click
}

// Check that the blocks and group exists
try -times 500 -delay 200 -command {
	with [get-view Blocks] {
	    get-label "NEW_GROUP" | get-property caption | equals "NEW_GROUP" | verify-true
	    get-label "NEW_BLOCK_01:" | get-property caption | equals "NEW_BLOCK_01:" | verify-true
	    get-label "NEW_BLOCK_02:" | get-property caption | equals "NEW_BLOCK_02:" | verify-true
	    get-label "NEW_BLOCK_03:" | get-property caption | equals "NEW_BLOCK_03:" | verify-true
	    get-label "NEW_BLOCK_04:" | get-property caption | equals "NEW_BLOCK_04:" | verify-true
	    get-label "NEW_BLOCK_05:" | get-property caption | equals "NEW_BLOCK_05:" | verify-true
	}
}

// Wait until the menu bar is clickable
try -times 500 -delay 200 -command {
	get-menu "Configuration/Edit Current Configuration..." | click
}

// Remove the blocks and group from the current config
// Delete block one
with [get-window "Edit Configuration"] {
    get-tab-folder | get-tab-item Blocks | click
    get-table | get-cell 4 0 | click
}
set-dialog-result MessageBox 32
// Delete block two
with [get-window "Edit Configuration"] {
    get-button "Delete Block" | click
    get-table | get-cell 3 0 | click
}
set-dialog-result MessageBox 32
// Delete block three
with [get-window "Edit Configuration"] {
    get-button "Delete Block" | click
    get-table | get-cell 2 0 | click
}
set-dialog-result MessageBox 32
// Delete block four
with [get-window "Edit Configuration"] {
    get-button "Delete Block" | click
    get-table | get-cell 1 0 | click
}
set-dialog-result MessageBox 32
// Delete block five
with [get-window "Edit Configuration"] {
    get-button "Delete Block" | click
    get-table | get-cell 0 0 | click
}
set-dialog-result MessageBox 32
with [get-window "Edit Configuration"] {
    get-button "Delete Block" | click
    get-tab-folder | get-tab-item Groups | click
    // Delete the group
    with [get-group Groups] {
        get-list | select "NEW_GROUP"
        get-button Remove | click
    }
    get-button Save | click
}
