try -times 60 -delay 1000 -command {
	get-menu "Configuration/Edit Current Configuration..." | click
}
with [get-window "Edit Configuration"] {
    get-tab-folder | get-tab-item Blocks | click
    get-button "Add Block" | click
    with [get-window "Block Configuration"] {
        with [get-group "Selected block"] {
            get-editbox -after [get-label "PV address:"] | click-text
            get-button "Select PV" | click
        }
        with [get-window -class PvSelectorDialog] {
            get-group "PV Selector" | get-table | select "NDW1695:HRA63823:DAE:BEAMCURRENT"
            get-button OK | click
        }
        get-button OK | click
    }
    get-button Save | click
}
wait 2000
try -times 60 -delay 1000 -command {
	get-menu "Configuration/Edit Current Configuration..." | click
}
with [get-window "Edit Configuration"] {
    get-tab-folder | get-tab-item Blocks | click
    get-table | get-cell 0 0 | click
    get-button "Edit Block" | click
}
with [get-window "Edit Configuration" | get-window "Block Configuration" | get-group "Logging Settings"] {
    get-combo -after [get-label "Mode:"] | get-property selection | equals "Periodic Scan for Change" | verify-true
    with [get-editbox -after [get-label "Rate/seconds:"]] {
        get-property enablement | equals false | verify-true
        get-property text | equals 0 | verify-true
    }
    get-button Enabled | get-property selected | equals false | verify-true
}
get-window "Edit Configuration" | get-window "Block Configuration" | get-group "Logging Settings" | get-button Enabled 
    | check
