    get-combo -after [get-label "Mode:"] | get-property selection | equals "Periodic Scan for Change" | verify-true
    get-editbox -after [get-label "Rate/seconds:"] | get-property text | equals 30 | verify-true
    get-button Enabled | get-property selected | equals true | verify-true
}
