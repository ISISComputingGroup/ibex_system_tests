// Create twelve new blocks
get-menu "Configuration/Edit Current Configuration..." | click
with [get-window "Edit Configuration"] {
    get-tab-folder | get-tab-item Blocks | click
    
    // procedure to add a new block
    proc "add_block"[val block_name] [val pv_name] {
    	get-button "Add Block" | click
    	with [get-window "Block Configuration"] {
        with [get-group "Selected block"] {
            with [get-editbox -after [get-label "Name:"]] {
                set-text $block_name
            }
            with [get-editbox -after [get-label "PV address:"]] {
                set-text $pv_name
            }
        }
        get-button OK | click
    }
    }
    
    // Add blocks
    add_block "NEW_BLOCK_01" "NEW_PV_01"
    add_block "NEW_BLOCK_02" "NEW_PV_02"
    add_block "NEW_BLOCK_03" "NEW_PV_03"
    add_block "NEW_BLOCK_04" "NEW_PV_04"
    add_block "NEW_BLOCK_05" "NEW_PV_05"
