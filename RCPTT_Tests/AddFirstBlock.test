let [val config_name [test_prefix "default"]] {

	get-menu "Configuration/Edit Current Configuration..." | click
	with [get-window "Edit Configuration"] {
		get-tab-folder | get-tab-item Blocks | click
		get-button "Add Block" | click
		with [get-window "Block Configuration"] {
			get-group "Selected block" | get-button "Select PV" | click
			with [get-window -class PvSelectorDialog] {
				get-group "PV Selector" | get-table | select ".*INSTNAME"
				get-button OK | click
			}
			get-button OK | click
		}
		get-tab-folder | get-tab-item Summary | click
		get-group Summary | get-editbox -after [get-label "Description:"] | set-text $config_name
		get-button "Save" | click
	}    	
}


// Assert the new block exists
try -times 100 -delay 100 -command {
	get-view Blocks | get-label "NEW_BLOCK:" | get-property caption | equals "NEW_BLOCK: " | verify-true
}


