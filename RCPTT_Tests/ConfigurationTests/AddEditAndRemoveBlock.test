///////////////////////
// ADD THE NEW BLOCK //
///////////////////////

try -times 60 -delay 1000 -command {
	get-menu "Configuration/Edit Current Configuration..." | click
}

with [get-window "Edit Configuration"] {
	get-tab-folder | get-tab-item Blocks | click
	get-button "Add Block" | click
	with [get-window "Block Configuration"] {
		get-group "Selected block" | get-button "Select PV" | click
		with [get-window -class PvSelectorDialog] {
			get-group "PV Selector" | get-table | select ".*INSTNAME"
			get-button OK | click
		}
		get-button OK | click
	}
	get-button Save | click
}

wait 2000

// Assert the new block exists
try -times 60 -delay 1000 -command {
	get-view Blocks | get-label "NEW_BLOCK:" | get-property caption | equals "NEW_BLOCK: " | verify-true
}

////////////////////
// EDIT THE BLOCK //
////////////////////

try -times 60 -delay 1000 -command {
	get-menu "Configuration/Edit Current Configuration..." | click
}
with [get-window "Edit Configuration"] {
	get-tab-folder | get-tab-item Blocks | click
	get-table | get-cell 0 0 | click
	get-button "Edit Block" | click
	with [get-window "Block Configuration"] {
		with [get-group "Selected block"] {
			get-editbox -after [get-label "Name:"] | set-text NEW_BLOCK_1
			get-editbox -after [get-label "PV address:"] | click-text 1
		}
		get-button Cancel | click
	}
	get-button Save | click
}

wait 2000

// Block still called "NEW_BLOCK"
try -times 60 -delay 1000 -command {
	get-menu "Configuration/Edit Current Configuration..." | click
}
with [get-window "Edit Configuration"] {
	get-tab-folder | get-tab-item Blocks | click
	get-table | get-cell 0 0 | get-property "getText()" | equals NEW_BLOCK | verify-true
	get-table | get-cell 0 0 | click
	get-button "Edit Block" | click
	with [get-window "Block Configuration"] {
		get-group "Selected block" | get-editbox -after [get-label "Name:"] | set-text NEW_BLOCK_1
		get-button OK | click
	}
	get-button Save | click
}

wait 2000

// Block now called "NEW_BLOCK_1"
try -times 60 -delay 1000 -command {
	get-menu "Configuration/Edit Current Configuration..." | click
}
with [get-window "Edit Configuration"] {
	get-tab-folder | get-tab-item Blocks | click
	get-table | get-cell 0 0 | get-property "getText()" | equals NEW_BLOCK_1 | verify-true
	get-table | get-cell 0 0 | click
	get-button "Edit Block" | click
	with [get-window "Block Configuration"] {
		get-group "Selected block" | get-editbox -after [get-label "Name:"] | click-text 1
		get-button OK | click
	}
	get-button Save | click
}

wait 2000

// Block still called "NEW_BLOCK_1"
try -times 60 -delay 1000 -command {
	get-menu "Configuration/Edit Current Configuration..." | click
}
with [get-window "Edit Configuration"] {
	get-tab-folder | get-tab-item Blocks | click
	get-table | get-cell 0 0 | get-property "getText()" | equals NEW_BLOCK_1 | verify-true
	get-table | get-cell 0 0 | click
	get-button "Edit Block" | click
	with [get-window "Block Configuration"] {
		get-group "Selected block" | get-editbox -after [get-label "Name:"] | set-text NEW_BLOCK
		get-button OK | click
	}
	get-button Save | click
}

wait 2000
	
// Block now called "NEW_BLOCK"
try -times 60 -delay 1000 -command {
	get-menu "Configuration/Edit Current Configuration..." | click
}
with [get-window "Edit Configuration"] {
	get-tab-folder | get-tab-item Blocks | click
	get-table | get-cell 0 0 | get-property "getText()" | equals NEW_BLOCK | verify-true
	get-button Cancel | click
}

//////////////////////
// DELETE THE BLOCK //
//////////////////////

try -times 60 -delay 1000 -command {
	get-menu "Configuration/Edit Current Configuration..." | click
}
with [get-window "Edit Configuration"] {
	get-tab-folder | get-tab-item Blocks | click
	get-table | get-cell 0 0 | click
}
set-dialog-result MessageBox 256
with [get-window "Edit Configuration"] {
	get-button "Delete Block" | click
	get-table | get-cell 0 0 | click
}
set-dialog-result MessageBox 32
with [get-window "Edit Configuration"] {
	get-button "Delete Block" | click
	get-button Save | click
}
