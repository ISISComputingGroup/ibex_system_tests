// Create variables for one config, block and PV address
let [val config01 [test_prefix "config01"]] [val block01 "block01"] [val pv01 "pv01"] {
	// In a new configuration...
	with [new_config] {
		// Add the block
		add_block $block01 $pv01

		// Create a group
		add_group 
		
		// Add the block to the group
		add_block_to_group "NEW_GROUP" $block01
		
		// Assert that the block exists in the group
		get-window "New configuration" | get-group Groups | get-list | select "NEW_GROUP"
		with [get-window "New configuration" | get-group "Selected group" | get-group Blocks | get-list 
    		-after [get-label "Selected:"] -index 1] {
    		get-property "getItems().String[0]" | equals $block01 | verify-true
		}
	}
}
