Entry-Name: .content

try -times 60 -delay 1000 -command {
	get-menu "Configuration/Edit Current Configuration..." | click
}
with [get-window "Edit Configuration"] {
    get-tab-folder | get-tab-item Blocks | click
    get-button "Add Block" | click
    with [get-window "Block Configuration"] {
        with [get-group "Selected block"] {
            get-editbox -after [get-label "PV address:"] | click-text
            get-button "Select PV" | click
        }
        with [get-window -class PvSelectorDialog] {
            get-group "PV Selector" | get-table | select "NDW1695:HRA63823:DAE:BEAMCURRENT"
            get-button OK | click
        }
        get-button OK | click
    }
    get-button Save | click
}
wait 2000
try -times 60 -delay 1000 -command {
	get-menu "Configuration/Edit Current Configuration..." | click
}
with [get-window "Edit Configuration"] {
    get-tab-folder | get-tab-item Blocks | click
    get-table | get-cell 0 0 | click
    get-button "Edit Block" | click
    with [get-window "Block Configuration" | get-group "Logging Settings"] {
        get-button Enabled | check
        get-editbox -after [get-label "Rate/seconds:"] | set-text 0
    }
}
get-window "Edit Configuration" | get-window "Block Configuration" | get-editbox -after [get-label "Configure Block"] 
    | get-property text | equals "Scan rate must be strictly positive" | verify-true
get-window "Edit Configuration" | get-window "Block Configuration" | get-group "Logging Settings" | get-editbox 
    -after [get-label "Rate/seconds:"] | set-text "-1"
get-window "Edit Configuration" | get-window "Block Configuration" | get-editbox -after [get-label "Configure Block"] 
    | get-property text | equals "Scan rate must be strictly positive" | verify-true
get-window "Edit Configuration" | get-window "Block Configuration" | get-group "Logging Settings" | get-editbox 
    -after [get-label "Rate/seconds:"] | set-text string
get-window "Edit Configuration" | get-window "Block Configuration" | get-editbox -after [get-label "Configure Block"] 
    | get-property text | equals "Scan rate must be an integer number of seconds" | verify-true
get-window "Edit Configuration" | get-window "Block Configuration" | get-group "Logging Settings" | get-editbox 
    -after [get-label "Rate/seconds:"] | set-text "1.0"
get-window "Edit Configuration" | get-window "Block Configuration" | get-editbox -after [get-label "Configure Block"] 
    | get-property text | equals "Scan rate must be an integer number of seconds" | verify-true
with [get-window "Edit Configuration" | get-window "Block Configuration" | get-group "Logging Settings"] {
    get-combo -after [get-label "Mode:"] | select "Monitor With Deadband"
    get-editbox -after [get-label "Deadband:"] | set-text 1
}
get-window "Edit Configuration" | get-window "Block Configuration" | get-editbox -after [get-label "Configure Block"] 
    | get-property text | equals "" | verify-true
get-window "Edit Configuration" | get-window "Block Configuration" | get-group "Logging Settings" | get-editbox 
    -after [get-label "Deadband:"] | set-text "-1"
get-window "Edit Configuration" | get-window "Block Configuration" | get-editbox -after [get-label "Configure Block"] 
    | get-property text | equals "Deadband cannot be negative" | verify-true
get-window "Edit Configuration" | get-window "Block Configuration" | get-group "Logging Settings" | get-editbox 
    -after [get-label "Deadband:"] | set-text "0.0"
get-window "Edit Configuration" | get-window "Block Configuration" | get-editbox -after [get-label "Configure Block"] 
    | get-property text | equals "" | verify-true
get-window "Edit Configuration" | get-window "Block Configuration" | get-group "Logging Settings" | get-editbox 
    -after [get-label "Deadband:"] | set-text string
get-window "Edit Configuration" | get-window "Block Configuration" | get-editbox -after [get-label "Configure Block"] 
    | get-property text | equals "Deadband must be a decimal number" | verify-true
with [get-window "Edit Configuration"] {
    get-window "Block Configuration" | get-button Cancel | click
    get-table | get-cell 0 1 | click
}
set-dialog-result MessageBox 32
with [get-window "Edit Configuration"] {
    get-button "Delete Block" | click
    get-button Save | click
}
